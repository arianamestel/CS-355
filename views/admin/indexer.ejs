<% include ../partials/header.ejs %>

	<div class='container'>
		<h3 class="d-flex justify-content-center text-primary font-weight-bold">
			<span class="cabin">Indexing Launcher</span>
		</h3>
		<div class="form-inline d-flex justify-content-center">
			<input type="text" name="indexerInput" id="indexerInput" class="form-control mr-2 col-6" placeholder="https://example.com">
			<button name="submitIndexer" id="submitIndexer" class="btn btn-primary">Search</button>	
		</div>


		<div class="container mt-3">
			<div class="d-flex justify-content-center invisible" id="loader">
  				<div class="spinner-border text-primary mt-3" style="width: 3rem; height: 3rem;"  role="status">
    				<span class="sr-only">Loading...</span>
  				</div>
  				<h3 class="text-primary mt-3 ml-3">Indexing...</h3>
			</div>
			<div id="indexerSuccess" class="d-flex justify-content-center text-secondary invisible">
				<h4>Successfully index URL! Click <a href="/my-search-engine">here</a> to search through our indexed URL's</h4>
			</div>
			<div id="indexerInvalid" class="d-flex justify-content-center text-secondary invisible">
				<h4>Invalid URL. Please try again.</h4>
			</div>
		</div>


	</div>

<% include ../partials/footer.ejs %>